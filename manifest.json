{
    "name": "Moodle Plus",
    "version": "4.1",
    "manifest_version": 3,
    "default_locale": "ja",
    "description": "Moodleにちょっとした機能を追加します!",
    "icons": {
        "16": "./icons/icon16.png",
        "32": "./icons/icon32.png",
        "48": "./icons/icon48.png",
        "128": "./icons/icon128.png"
    },
    "author": "tomo0611@hotmail.com",
    "content_scripts": [
        {
            "matches": [
                "https://lms.omu.ac.jp/*",
                "https://moodle.s.kyushu-u.ac.jp/*",
                "https://elms.u-aizu.ac.jp/*",
                "https://sulms.shiga-u.ac.jp/*",
                "https://mdl.media.gunma-u.ac.jp/*",
                "https://cms.aitech.ac.jp/*"
            ],
            "js": [
                "./dist/content_script_injector.js",
                "./dist/leaQs_contents.js"
            ],
            "css": [
                "./styles/main.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "dist/index_rewrite.js",
                "dist/olt_enhance.js"
            ],
            "matches": [
                "https://lms.omu.ac.jp/*",
                "https://moodle.s.kyushu-u.ac.jp/*",
                "https://elms.u-aizu.ac.jp/*",
                "https://sulms.shiga-u.ac.jp/*",
                "https://mdl.media.gunma-u.ac.jp/*",
                "https://cms.aitech.ac.jp/*"
            ]
        }
    ],
    "background": {
        "service_worker": "dist/background.js"
    }
}